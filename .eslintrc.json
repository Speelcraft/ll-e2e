{
  "root": true,

  "env": {
    "browser": true,
    "es2022": true,
    "jest": true
  },

  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],

  "rules": {
    "@typescript-eslint/no-namespace": "off"
  },

  "parser": "@typescript-eslint/parser",

  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },

  "plugins": ["@typescript-eslint", "cypress"]
}
